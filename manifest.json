{
  "manifest_version": 3,
  "name": "Amino Backup Tool",
  "version": "1.0.0",
  "description": "Exportez en quelques clics vos posts et wiki Amino",
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Amino Backup Tool",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/jspdf.umd.min.js", 
        "libs/jszip.min.js", 
        "srcs/libs-loader.js",
        "srcs/content.js"
      ],
      "css": ["srcs/content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "srcs/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 